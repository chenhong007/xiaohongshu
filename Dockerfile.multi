# 前端构建阶段 (多服务版本 - 仅构建)
FROM node:20-alpine AS builder

WORKDIR /app

# 复制 package 文件
COPY package*.json ./

# 安装依赖
RUN npm ci

# 复制源代码
COPY . .

# 构建前端
RUN npm run build

# 最终镜像 - 仅保留构建产物
FROM alpine:latest

WORKDIR /app

# 从构建阶段复制构建产物
COPY --from=builder /app/dist /app/dist

# 保持容器运行（用于 volume 共享）
CMD ["tail", "-f", "/dev/null"]

